{
  "manifest_version": 3,
  "name": "Web Recorder",
  "version": "1.0",
  "description": "Record current tab content as a video file.",
  "permissions": [
    "tabCapture",
    "offscreen",
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js"
  }
}